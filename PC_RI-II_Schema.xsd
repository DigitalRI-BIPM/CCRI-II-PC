            <xs:element name = "datasetDownLink" type="xs:anyURI"></xs:element> <!-- SP /code_comparison/link_dataset: url -->
            <xs:element name = "linkedComparisonCode" type="kc:linkedCompType" minOccurs= "0" maxOccurs = "1"></xs:element> <!-- SP /code_comparison/acronymum_reference_KC: string -->
